class GrasshopperIntegration:
    def __init__(self):
        self.gh_definitions = self.load_grasshopper_definitions()

    def run_grasshopper_definition(self, definition_name, input_params):
        """Run Grasshopper definition with parameters"""
        # Load Grasshopper definition
        gh_def = self.gh_definitions[definition_name]

        # Set input parameters
        for param_name, value in input_params.items():
            gh_def.set_input(param_name, value)

        # Run definition
        results = gh_def.run()

        # Extract results
        geometry = results.get_output('Geometry')
        performance_data = results.get_output('PerformanceData')

        return {
            'geometry': geometry,
            'performance': performance_data
        }

    def create_adaptive_facade(self, climate_data, orientation):
        """Create climate-responsive facade design"""
        facade_params = {
            'solar_angle': climate_data['solar_angles'],
            'temperature': climate_data['temperature'],
            'orientation': orientation
        }

        return self.run_grasshopper_definition('adaptive_facade', facade_params)